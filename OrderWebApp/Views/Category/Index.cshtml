@model List<Category>

<partial name="_Notification"></partial>
<div class="container ">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">  <i class="bi bi-plus-circle"></i>          Add new Category</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th class="text-center">Category Name</th>
        <th class="text-center"> Display Order</th>
        <th class="text-center">Manage Category</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {    
        <tr>
            <td class="text-center">@obj.Name</td>
            <td class="text-center">@obj.DisplayOrder</td>
            <td class="text-center">
                    <div class="btn-group w-75 text-center">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-1"><i class="bi bi-pencil-square"></i> Edit </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1"><i class="bi bi-trash3"></i>Delete </a>
                    </div>
            </td>
        </tr>
        }
    </tbody>
</table>