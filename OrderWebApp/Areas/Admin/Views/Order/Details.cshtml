@model OrderVM

<form method="post">
    <br />
    <input asp-for="OrderHeader.Id" hidden/>
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-action ="Index"class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">

                                <div class="col-3">Name</div>
                                @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee)){
                                <div class="col-9">
                                    <input asp-for="@Model.OrderHeader.Name" class="form-control"  />
                                    <span asp-validation-for="@Model.OrderHeader.Name" class="text-danger"></span>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-9">
                                        <input asp-for="@Model.OrderHeader.Name" class="form-control" />
                                        <span asp-validation-for="@Model.OrderHeader.Name" readonly class="text-danger"></span>
                                    </div>
                                    
                                }
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.PhoneNumber" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.PhoneNumber" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.PhoneNumber" readonly class="text-danger"></span>
                                        </div>

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.Address" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.Address" class="text-danger"></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.Address" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.Address" readonly class="text-danger"></span>
                                        </div>

                                    }
                                </div>
                            </div>
                           
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.ApplicationUser.Email" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.ApplicationUser.Email" class="text-danger"></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.ApplicationUser.Email" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.ApplicationUser.Email" readonly class="text-danger"></span>
                                        </div>

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" class="form-control" />
                                  
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.Carrier" id="carrier" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.Carrier" class="text-danger"></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.Carrier" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.Carrier" id="carrier" readonly class="text-danger"></span>
                                        </div>

                                    }
                                </div>
                         </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.TrackingNumber" id="trackingNumber" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.TrackingNumber" class="text-danger"></span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.TrackingNumber" id="trackingNumber" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.TrackingNumber" readonly class="text-danger"></span>
                                        </div>

                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                   
                                        <div class="col-9">
                                            <input  value="@Model.OrderHeader.ShippingDate.ToShortDateString()" class="form-control" />
                                          
                                </div>
                            </div>

                            
                            <div class="row my-1">
                                <div class="col-3">Payment Intent ID</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1">

                                <div class="col-3">Payment Due Date</div>
                                <div class="col-9">
                                   
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.PaymentDueDate" readonly class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.PaymentDueDate" class="text-danger"></span>
                                        </div>
                                   
                                </div>

                                <div class="col-3">Payment Date</div>
                                <div class="col-9">
                                   
                                        <div class="col-9">
                                            <input value="@Model.OrderHeader.PaymentDate.ToShortDateString()" readonly class="form-control" />
                                        </div>
                                </div>

                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    
                                        <div class="col-9">
                                            <input asp-for="@Model.OrderHeader.PaymentStatus" class="form-control" />
                                            <span asp-validation-for="@Model.OrderHeader.PaymentStatus" readonly class="text-danger"></span>
                                        </div>

                                    
                                </div>
                            </div

                            @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee)){
                                  <input type="submit" class="btn btn-warning form-control my-1" value="Update Order Details" />
                                }
                            <input type="submit" asp-action="UpdateOrderDetails" class="btn btn-warning form-control my-1" value="Update Order Details" />

                          </div>
                       </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status:&nbsp; @Model.OrderHeader.OrderStatus</label>

                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderDetail)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0 text-primary">@item.Product.Title</h6>
                                                <small class="text-muted">Price : @item.Price</small><br />
                                               
                                            </div>
                                            <div class="col-4 text-end">
                                                <span class="text-success">@item.Price * @item.count </span>
                                               
                                            </div>
                                        </div>
                                    </li>
                                }

                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.OrderHeader.OrderTotal</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if (Model.OrderHeader.PaymentStatus == SD.PaymentStatusDelayedPayment &&
           Model.OrderHeader.OrderStatus == SD.StatusShipped)
                            {
                                <input type="submit" class="btn btn-success form-control my-1" value="Pay Now" />
                            }
                            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
                            {
                                @if (Model.OrderHeader.OrderStatus == SD.StatusApproved)
                                {
                                    <input type="submit" asp-action="StartProcessing" class="btn btn-primary form-control my-1" value="Start Processing" />
                                }
                                @if (Model.OrderHeader.OrderStatus == SD.StatusInProcess)
                                {
                                    <button type="submit" onclick ="return validateInput()" asp-action="ShipOrder" class="btn btn-primary form-control my-1"  > Ship Order</button>
                                }
                                @if (Model.OrderHeader.OrderStatus != SD.StatusRefunded &&
                                              Model.OrderHeader.OrderStatus != SD.StatusCancelled &&
                                              Model.OrderHeader.OrderStatus != SD.StatusShipped)
                                {
                                    <input type="submit" asp-action="CancelOrder" class="btn btn-danger form-control my-1" value="Cancel Order" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function validateInput(){
            if (document.getElementById("trackingNumber").value == "") { 
                Swal.fire({
                    icon : "error",
                    title : "Oops",
                    text : "Please enter Tracking Number."
                })
            return false;
            }
        if (document.getElementById("carrier").value == "") { 
            Swal.fire({
                    icon : "error",
                    title : "Oops",
                    text : "Please enter Carrier."
                })
            return false;
            }
        return true;
        }

    </script>
}
