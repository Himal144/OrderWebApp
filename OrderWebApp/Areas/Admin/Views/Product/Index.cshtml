@model List<Product>

<partial name="_Notification"></partial>
<div class="container ">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">  <i class="bi bi-plus-circle"></i>          Add new Product</a>
        </div>
    </div>
</div>
<table id="tblData" class="table table-bordered table-striped">
    <thead>
    <tr>
        <th class="text-center">Product Title</th>
        <th class="text-center"> Description</th>
        <th class="text-center">ISBN</th>
        <th class="text-center">Author</th>
        <th class="text-center">Category</th>
        <th class="text-center">List Price</th>
        <th class="text-center">Price(1-50)</th>
        <th class="text-center">Price(50-100)</th>
        <th class="text-center">Price(100+)</th>
         <th class="text-center"> Manage </th>

        
    </tr>
    </thead>

</table>

                        @section scripts{
                            <script src="~/js/product/product.js"></script>
                        }