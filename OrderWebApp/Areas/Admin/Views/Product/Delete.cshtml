@model ProductVM

<form method="post">
    @* Not required for the Primary key Id if other then Id is made primary key the it is required to do so
    <input asp-for="Id" hidden/> *@


<div class="border p-3 mt-4">
    <div class="row ">
        <h2 class="text-danger text-center">Delete Category</h2>
        <hr />
    </div>
     <div class="mb-3 row p-2">
        <label asp-for="Product.Title" class="p-0"></label>
        <input asp-for="Product.Title" disabled class="form-control" />
          
    </div>
      <div class="mb-3 row p-2">
        <label asp-for="Product.Description" class="p-0"></label>
        <input asp-for="Product.Description" disabled class="form-control" />
        
    </div>
    <div class="mb-3 row p-2">
        <label asp-for="Product.ISBN" class="p-0"></label>
        <input asp-for="Product.ISBN" disabled class="form-control" />
         
    </div>
    <div class="mb-3 row p-2">
        <label asp-for="Product.Author" class="p-0"></label>
        <input asp-for="Product.Author" disabled class="form-control" />
          
    </div>
    <div class="mb-3 row p-2">
        <label asp-for="Product.CategoryId" class="p-0"></label>
        <select asp-for="Product.CategoryId" asp-items="ViewBag.CategoryList" disabled  class="form-control" >
    <option disabled selected>--Select Category</option>
</select>
        
    </div>
    <div class="mb-3 row p-2">
        <label asp-for="Product.ListPrice" class="p-0"></label>
        <input asp-for="Product.ListPrice" disabled class="form-control" />
          
    </div>

    <div class="mb-3 row p-2">
        <label asp-for="Product.Price" class="p-0"></label>
        <input asp-for="Product.Price" diabled class="form-control" />
      
    </div>
    <div class="mb-3 row p-2">
        <label asp-for="Product.Price50" class="p-0"></label>
        <input asp-for="Product.Price50" disabled class="form-control" />
          
    </div>
    <div class="mb-3 row p-2">
        <label asp-for="Product.Price100" class="p-0"></label>
        <input asp-for="Product.Price100" disabled  class="form-control" />
        
    </div>
    <div class="row">
        <div class=" col-6 col-md-3 my-1 ">
    <button type="submit" class="btn btn-danger form-control"  > Delete</button>
        </div>
        <div class=" col-6 col-md-3  my-1  text-end">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control" > Back to List</a>
        </div>
    </div>
</div>
</form>
